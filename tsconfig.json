{
	"compilerOptions": {
		"outDir": "nodejs/dist",
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"sourceMap": true,
		"stripInternal": true,
		"experimentalDecorators": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"forceConsistentCasingInFileNames": true,
		"strictNullChecks": true
	},
	"files": [
      "nodejs/src/index.ts"
	]
}

